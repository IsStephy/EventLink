{
    "builds": [
      {
        "src": "Frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "Backend/api/*.py",
        "use": "@vercel/python"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/Backend/api/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/Frontend/$1"
      }
    ]
  }
  